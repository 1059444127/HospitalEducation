@using EATMVC.Model
@model GP_Login
@{
    Layout = null;
}
  
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>全科医生规范化培训管理系统</title>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/MyJs/global.js"></script>
    <link href="~/Content/MyCss/global.css" rel="stylesheet" />
     <script type="text/javascript">
         if (self != top) {
             top.location = self.location;
         }
         function Quit() {
             window.location.href = "/Home/Index";
        }
    </script>
</head>
<body onscroll="no">
   <form id="form1">
        <div>
            <table border="0" cellpadding="0" cellspacing="0" style="height: 100%; width: 100%;">
                <tr>
                    <td colspan="3" style="height: 30px;">
                        <table width="100%" style="height: 38px;" border="0" cellpadding="0" cellspacing="0">
                            <tr>
                                <td colspan="2">
                                    <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                        <tr>
                                            <td width="290" rowspan="2" align="left" style="padding-left: 10px; background-color: white;">
                                                <div style="color: blue; font-size: 20px; font-weight: bold;">全科医生规范化培训管理系统</div>
                                            </td>
                                            <td  height="26" align="left" valign="bottom" style="color: red; font-size: 15px; font-weight: bold;">
                                                  @Html.Label(Model.training_base_name)

                                                    <a style="padding-left:2em;" />
                                                    @if (ViewBag.role == "students")
                                                    {
                                                        @Html.Label("students", "学员")
                                                    }
                                                    else if (ViewBag.role == "teachers")
                                                    {
                                                        @Html.Label("teachers", "带教老师")
                                                    } 
                                                    else
                                                    {
                                                        @Html.Label("managers", "管理员")
                                                    }
                                                    信息系统工作站 
                                            </td>
                                        </tr> 
                                    </table>
                                </td>
                            </tr>
                        </table>
                        <table width="100%" border="0" cellpadding="0" cellspacing="0">
                            <tr>
                                <td>
                                    <table width="100%" border="0" cellpadding="0" cellspacing="0"  style="background-color: #0066cc;color:#fff;">
                                        <tr>
                                            <td align="right">

                                                @if (ViewBag.role == "students")
                                                {
                                                    <span style="color: White;">当前用户:</span>
                                                    @Html.Label(Model.real_name, new { style = "color:white" })
                                                    <a style="color: White;" href="javascript:OpenTopWindow('@Url.Action("ModifyPassword", "QKFrame", new { tag=Model.id})',500,140);">(修改密码)</a>
                                                    <span>&nbsp;</span>
                                                    <span style="color: White;">日期:</span>
                                                    @Html.Label(DateTime.Now.ToString("yyyy年MM月dd日"), new { style = "color:white" })
                                                    <span>&nbsp;</span>
                                                    <a style="color: White;" href="#" onclick="Quit()">安全退出</a>
                                                    <span>&nbsp;</span>
                                                }
                                                else if (ViewBag.role == "teachers")
                                                {
                                                    <span style="color: White;">当前用户:</span>
                                                    @Html.Label(Model.real_name, new { style = "color:white" })
                                                    <a style="color: White;" href="javascript:OpenTopWindow('@Url.Action("ModifyPassword", "QKFrame", new { tag = Model.id })',500,140);">(修改密码)</a>
                                                    <span>&nbsp;</span>
                                                    @Html.Label(Model.professional_base_name, new { style="color:white"})
                                                    <span>&nbsp;</span>
                                                    @Html.Label(Model.dept_name, new { style="color:white"})
                                                    <span>&nbsp;</span>
                                                    <span style="color: White;">日期:</span>
                                                    @Html.Label(DateTime.Now.ToString("yyyy年MM月dd日"), new { style = "color:white" })
                                                    <span>&nbsp;</span>
                                                    <a style="color: White;" href="#" onclick="Quit()">安全退出</a>
                                                    <span>&nbsp;</span>
                                                } 
                                                else
                                                {
                                                    <span style="color: White;">当前用户:</span>
                                                    @Html.Label(Model.real_name, new { style = "color:white" })
                                                    <a style="color: White;" href="javascript:OpenTopWindow('@Url.Action("ModifyPassword", "QKFrame", new { tag=Model.id})',500,140);">(修改密码)</a>
                                                    <span>&nbsp;</span>
                                                    <span style="color: White;">日期:</span>
                                                    @Html.Label(DateTime.Now.ToString("yyyy年MM月dd日"), new { style = "color:white" })
                                                    <span>&nbsp;</span>
                                                    <a style="color: White;" href="#" onclick="Quit()">安全退出</a>
                                                    <span>&nbsp;</span>
                                                }

                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
                <tr>
                    <td align="center" valign="middle" id="frmTitle" style="width:169px;">
                        <iframe frameborder="0" id="LeftFrame" scrolling="auto" src='@Url.Action("LeftFrame", "QKFrame", new { role=ViewBag.role})' style="height: 100%; visibility: inherit; width: 165px; z-index: 2"></iframe>
                    </td>
                    <td style="width: 100%">
                        <iframe frameborder="0" id="MainFrame" name="MainFrame" scrolling="no" src='@Url.Action("MainFrame")' style="height: 100%; visibility: inherit; width: 100%; z-index: 1"></iframe>
                    </td>
                </tr>
            </table>

        </div>
   </form>
</body>
</html>
